@using Waffle.Models.Components;
@model Waffle.Models.Components.ExchangeRate

<div class="exchange-rate mb-4 overflow-auto">
    <div class="title">Tỷ giá ngày @Model.ExrateList.DateTime</div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Currency Name</th>
                <th>Currency Code</th>
                <th>Giá mua vào</th>
                <th>Giá chuyển đổi</th>
                <th>Giá bán ra</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ExrateList.Exrate)
            {
                <tr>
                    <td>@item.CurrencyName</td>
                    <td>@item.CurrencyCode</td>
                    <td>@item.Buy</td>
                    <td>@item.Transfer</td>
                    <td>@item.Sell</td>
                </tr>
            }
        </tbody>
    </table>
</div>
