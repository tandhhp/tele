@model Waffle.Models.Components.Jumbotron

<div class="relative overflow-hidden bg-cover bg-no-repeat p-12 text-center jumbotron" style="background-image: url('@Model.BackgroundImage')">
    <div class="absolute top-0 right-0 bottom-0 left-0 h-full w-full overflow-hidden bg-fixed"
         style="background-color: rgba(0, 0, 0, 0.6)">
        <div class="flex h-full items-center justify-center">
            <div class="text-white">
                <h2 class="mb-4 text-4xl font-semibold">DLiTi Landscape</h2>
                <h4 class="mb-6 text-xl font-semibold">We are handymen who specialised in decking, patio/carport and fencing</h4>
                <div class="flex gap-4 justify-center text-sm md:text-lg">
                    <a href="/page/get-free-quote"
                       class="rounded border-2 border-neutral-50 px-6 py-2 uppercase text-medium hover:text-white">
                        <i class="far fa-paper-plane me-2"></i>
                        Get free quote
                    </a>
                    <a href="https://www.facebook.com/DLiTiKingston" class="rounded border-2 border-neutral-50 px-6 py-2 uppercase text-medium hover:text-white">
                        <i class="fab fa-facebook me-2"></i> FACEBOOK
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>