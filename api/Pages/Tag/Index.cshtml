@page
@using Waffle.Models.Components
@using Waffle.Models.Components.Specifications
@model Waffle.Pages.Tag.IndexModel

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="mb-4 flex justify-between items-center">

                @Html.DisplayFor(x => Model.SearchTerm)

                <div class="dropdown">
                    <button class="py-2 fw-medium" data-bs-toggle="dropdown" aria-expanded="false" id="drp-sort">
                        <i class="fas fa-sort-amount-up"></i> Sắp xếp
                    </button>
                    <div class="dropdown-menu bg-white shadow dropdown-menu-end shadow-lg rounded" aria-labelledby="drp-sort" style="">
                        <a class="py-2 px-4 flex items-center hover:bg-gray-100 w-full rounded-b" href="?searchTerm=@Model.SearchTerm&orderBy=VIEW">Lượt xem</a>
                        <a class="py-2 px-4 flex items-center hover:bg-gray-100 w-full rounded-b" href="?searchTerm=@Model.SearchTerm&orderBy=COUNT">Số lượng</a>
                    </div>
                </div>
            </div>
            <partial name="~/Pages/Shared/Components/ListGroup/Default.cshtml" model="Model.Tags" />
            @Html.DisplayFor(x => Model.Pagination)
        </div>
        <div class="col-md-4">
            @await Component.InvokeAsync(nameof(ArticleSpotlight))
            @await Component.InvokeAsync(nameof(Waffle.ExternalAPI.Models.GoogleAggregate.Trend))
            @await Component.InvokeAsync(nameof(ProductSpotlight))
        </div>
    </div>
</div>