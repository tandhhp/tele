@page
@model Waffle.Pages.Users.ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="container">
    <div class="title">Quên mật khẩu</div>
    <div class="flex justify-center items-center">
        <div class="col-md-4">
            <form method="post">
                <div class="form-item">
                    <div class="mb-1 fw-medium">
                        <label asp-for="Input.Email"></label>
                    </div>
                    <input asp-for="Input.Email" class="form-control" placeholder="Nhập địa chỉ email" required />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-4 text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="mb-4 text-red-500" @(string.IsNullOrEmpty(Model.Error) ? "hidden" : "")>
                    @Model.Error
                </div>
            </form>
        </div>
    </div>
</div>