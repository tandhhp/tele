@page
@model Waffle.Pages.Users.EditModel

<main class="container">
    <div class="row">
        <partial name="_Leftbar" model="Model.CurrentUser" />
        <div class="col-md-9 mb-4">
            <div class="card shadow">
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">@Model.ErrorMessage</div>
                }
                <form method="post">
                    <input type="hidden" value="@Model.CurrentUser?.Id" name="@nameof(Model.UserId)" />
                    <div class="form-item">
                        <label class="form-label">Họ và tên</label>
                        <input type="text" class="form-control" value="@Model.CurrentUser?.Name" name="@nameof(Model.Name)" />
                    </div>
                    <div class="form-item">
                        <label class="form-label">Số điện thoại</label>
                        <input type="tel" class="form-control" value="@Model.CurrentUser?.PhoneNumber" name="@nameof(Model.PhoneNumber)" />
                    </div>
                    <div class="form-item">
                        <label class="form-label">Địa chỉ</label>
                        <input type="text" class="form-control" value="@Model.CurrentUser?.Address" name="@nameof(Model.Address)" />
                    </div>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </form>
            </div>
        </div>
    </div>
</main>